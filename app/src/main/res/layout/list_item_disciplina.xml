<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_two_line"
    android:gravity="center_vertical">

    <br.com.wakim.autoescola.calendario.app.view.RobotoTextView
        android:id="@+id/lid_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_round"
        android:text="DD"
        android:textColor="@color/white"
        android:textSize="@dimen/text_body1"
        android:layout_marginLeft="@dimen/margin_list_icon"
        android:layout_marginStart="@dimen/margin_list_icon"
        android:gravity="center"
        app:typeface="regular" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/margin_text"
        android:layout_marginEnd="@dimen/margin_text"
        android:layout_marginLeft="@dimen/margin_text"
        android:layout_marginStart="@dimen/margin_text">

        <br.com.wakim.autoescola.calendario.app.view.RobotoTextView
            android:id="@+id/lid_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/Material.List.TextView.Primary"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:text="Direção Defensiva"
            app:typeface="medium" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <br.com.wakim.autoescola.calendario.app.view.RobotoTextView
                android:id="@+id/lid_description_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/Material.List.TextView.Secondary"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:gravity="center_vertical"
                android:text="@string/concluidas"
                app:typeface="regular" />

            <br.com.wakim.autoescola.calendario.app.view.RobotoTextView
                android:id="@+id/lid_description_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Material.List.TextView.Secondary"
                android:gravity="center_vertical"
                android:text="@string/restantes"
                app:typeface="regular" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>